.home-container//主页样式
  // position relative
  // padding-bottom 60px
  padding-top 82px
  box-sizing border-box
  // width 100%
  // min-height 100%
  // overflow hidden
  .home-header//主页头部
    background #fff
    height 82px
    width 100%
    position relative
    z-index 100
    margin-bottom 5px
    position fixed
    top 0px
    left 0px
    .header-nav
      width 100%
      height 30px
      position relative
      .toggle-arrow
        position absolute
        right 0
        top 0
        width 60px
        height 30px
        text-align center
        line-height 30px
        overflow hidden
        background-color #fff
        &.arrowDown
          transform rotateZ(180deg)
      .nav-box
        width 100%
        height 200px
        // height 670px
        background #fff
        .box-title
          height 30px
          font-size 16px
        .box-list
          display flex
          flex-wrap wrap
          .box-item
            width 20%
            height 30px
            border 1px solid gray
            border-radius 10%
            margin 5px
            text-align center
            line-height 30px
            &.active
              border 1px solid #b4282d
      .wrapper//主页头部导航
        width 85%
        height 30px
        //padding 10px
        position relative
        box-sizing border-box
        display flex  //如果此处不设置 那么flexitem 不会被其子元素撑开 //块级元素宽度默认是独占一行，不能由子元素内容撑开高度
        overflow hidden
        .content
          height 30px
          width 5000px
          display flex
          flex-wrap nowrap
          flex none
          .nav-item
            flex none
            min-width 80px
            height 30px
            color #b4282d
            text-align center
            line-height 30px
            &:nth-child(1)
              width 60px
            &:nth-child(6)
              width 100px
            //&:nth-child(1)
            //  width 80px
            a
              padding 5px
  .home-main
    width 100%
    
    