.cart-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color #f4f4f4
  overflow hidden
  .cart-header
    // width 100%
    height 44px
    padding 0 20px
    display flex
    justify-content space-between
    align-items center
    background-color #fff
    span 
      font-size 18px
      color #333
    a
      font-size 14px
      color #b4282d
  .cart-main
    width 100%
    display flex
    flex-direction column
    
    .cart-list
      width 100%
      height 35px
      padding 0 20px
      display flex
      .cart-item
        width 33%
        text-align center
        height 35px
        line-height 35px
        span 
          font-size 12px
    img
      width 125px 
      height 125px
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
    .add-loginBtn
      display flex
      flex-direction column
      margin-top 320px
      margin-left 22px
      span 
        text-align center
      .login-btn
        height 45px
        width 240px
        background red
        text-align center
        line-height 45px
        margin-top 40px
        margin-left 60px
        a
          color white